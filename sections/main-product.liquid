<h2>My products</h2>
{% for item in collections['creams'].products %}
    {% if item.metafields.custom.planeta %}
        <p>{{ item.title }} from <span>{{ item.metafields.custom.planeta.value }}</span></p>
    {% else %}
        <p>{{ item.title }} from <span>unknown planeta</span></p>
    {% endif %}
{% endfor %}
{% schema %}
{
    "name": "main-product"
}
{% endschema %}
